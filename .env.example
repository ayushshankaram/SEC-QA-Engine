# SEC Filings QA Engine - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# OpenAI API Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here

# Neo4j Database Configuration (REQUIRED)
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password_here
NEO4J_DATABASE=neo4j

# =============================================================================
# OPTIONAL ENHANCEMENTS
# =============================================================================

# Voyage AI API (Enhanced financial embeddings)
VOYAGE_API_KEY=your_voyage_api_key_here

# SEC.io API (Higher rate limits for SEC data)
SEC_API_KEY=your_sec_io_api_key_here

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Financial Embedding Model
FIN_E5_MODEL_PATH=intfloat/e5-large-v2

# Embedding Model Weights (sum should equal 1.0)
VOYAGE_WEIGHT=0.4
FIN_E5_WEIGHT=0.3
XBRL_WEIGHT=0.2
SPARSE_WEIGHT=0.1

# Model Settings
MAX_FILING_SIZE_MB=50
EMBEDDING_BATCH_SIZE=32
MAX_TOKENS_PER_CHUNK=1024

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Processing Limits
MAX_CONCURRENT_REQUESTS=5
REQUEST_DELAY_SECONDS=1
API_TIMEOUT_SECONDS=30

# Cache Configuration
ENABLE_EMBEDDING_CACHE=true
CACHE_TTL_HOURS=24
MAX_CACHE_SIZE_GB=2

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log File Locations
LOG_DIR=logs
ENABLE_FILE_LOGGING=true
MAX_LOG_FILE_SIZE_MB=100

# =============================================================================
# DEVELOPMENT/DEBUG SETTINGS
# =============================================================================

# Development Mode
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Mock Services (for testing without APIs)
ENABLE_MOCK_SERVICES=false
MOCK_EMBEDDING_DIMENSION=1024

# Performance Monitoring
ENABLE_PERFORMANCE_METRICS=true
METRICS_EXPORT_INTERVAL_MINUTES=10

# =============================================================================
# SEC DATA PROCESSING
# =============================================================================

# Filing Processing Limits
MAX_10K_FILINGS=3
MAX_10Q_FILINGS=3
MAX_8K_FILINGS=2
MAX_DEF14A_FILINGS=2
MAX_FORMS_345_FILINGS=5

# Section Extraction Limits
MAX_10K_SECTIONS=8
MAX_10Q_SECTIONS=6
MAX_8K_SECTIONS=4
MAX_DEF14A_SECTIONS=6
MAX_FORMS_345_SECTIONS=3

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Environment
ENVIRONMENT=development

# System Paths
DATA_DIRECTORY=data
MODEL_CACHE_DIRECTORY=model_cache
TEMP_DIRECTORY=temp


# =============================================================================
# EXAMPLE USAGE NOTES
# =============================================================================

# 1. Copy this file to .env in the same directory
# 2. Replace all "your_*_here" values with your actual API keys
# 3. Adjust configuration values based on your system resources
# 4. Set DEBUG_MODE=true for development, false for production
# 5. Enable MOCK_SERVICES=true for testing without external APIs

# For production deployment, ensure:
# - Strong Neo4j password
# - Valid API keys for all services
# - Appropriate resource limits based on your infrastructure
# - LOG_LEVEL=WARNING or ERROR for production
# - ENABLE_PERFORMANCE_METRICS=true for monitoring